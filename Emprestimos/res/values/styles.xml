<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="FillWrap">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="WrapWrap">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="FillFill">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>

    <style name="FillFill.ScrollViewFillViewPort">
		<item name="android:fillViewport">true</item>
    </style>
    
    <style name="FillWrap.RadioGroupHorizontal">
		<item name="android:gravity">center</item>
		<item name="android:orientation">horizontal</item>
    </style>
    
	<style name="FillWrap.Spinner">
		<item name="android:layout_marginLeft">20sp</item>
		<item name="android:layout_marginRight">20sp</item>
	</style>
	
		<style name="FillWrap.EditText">
		<item name="android:inputType">text</item>
		<item name="android:layout_marginLeft">20sp</item>
		<item name="android:layout_marginRight">20sp</item>
	</style>

	<style name="FillWrap.EditText.NoFocus">
		<item name="android:inputType">text</item>
		<item name="android:focusable">false</item>
		<item name="android:maxLength">10</item>
		<item name="android:layout_marginLeft">20sp</item>
		<item name="android:layout_marginRight">20sp</item>
	</style>

	
	<style name="WrapWrap.RadioButton">
		<item name="android:gravity">center</item>
		<item name="android:paddingRight">20sp</item>
	</style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/layout_root"
	    android:orientation="horizontal"
	    android:padding="10dp"
	    style="@style/FillFill.Layout">
 
    <EditText android:id="@+id/inputText"
        style="@style/FillWrap.EditText"
        android:layout_below="@+id/msg">
    </EditText>
 
    <Button android:id="@+id/bt_confirmar"
        style="@style/WrapWrap"
        android:layout_below="@+id/inputText"
        android:text="Confirmar">
    </Button>
    <Button android:text="Cancelar"  
        android:id="@+id/bt_cancel" 
        style="@style/WrapWrap"
        android:layout_alignTop="@+id/bt_confirmar" 
        android:layout_toRightOf="@+id/bt_confirmar"></Button>
 
</RelativeLayout>